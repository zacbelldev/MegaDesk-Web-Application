@{
    Layout = "~/_Layout.cshtml";
    Page.Title = "List Quotes";

    var db = Database.Open("QuoteDatabase");
    var selectCommand = "SELECT * FROM QuoteTable";
    var searchTerm = "";

    if (!Request.QueryString["searchName"].IsEmpty())
    {
        selectCommand = "SELECT * FROM QuoteTable WHERE CustomerName = @0";
        searchTerm = Request.QueryString["searchName"];
    }

    var selectedData = db.Query(selectCommand, searchTerm);
    var grid = new WebGrid(source: selectedData, defaultSort: "Date", rowsPerPage: 5);
}

<h2>List Quotes</h2>
<form method="get">
    <div>
        <label for="searchBook">Search Customer Name:</label>
        <input type="text" name="searchBook" value="@Request.QueryString["searchName"]" />
        <input type="Submit" value="Search Book" /><br />
    </div>
</form>
<div>
    @grid.GetHtml(
        tableStyle: "grid",
        headerStyle: "head",
        alternatingRowStyle: "alt",
        columns: grid.Columns(
            grid.Column(format: @<a href="~/EditQuote?id=@item.Id">Edit</a>),
                        grid.Column("Date"),
                        grid.Column("Customer Name"),
                        grid.Column("Deth"),
                        grid.Column("Width"),
                        grid.Column("Drawer"),
                        grid.Column("Material"),
                        grid.Column("RushDays"),
                        grid.Column("Total"),
                        grid.Column(format: @<a href="~/DeleteQuote?id=@item.Id">Delete</a>)
                            )
                        )
</div>
<p>
    <a href="~/AddQuote">Add a Quote</a>
</p>